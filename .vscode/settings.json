{
  "css.lint.unknownAtRules": "ignore",
  // Disable the default formatter, use eslint instead
  "prettier.enable": false,
  "editor.formatOnSave": false,

  // Auto fix
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never"
  },

  // Stylistic rules
  "eslint.rules.customizations": [
    { "rule": "style/*", "fixable": true },
    { "rule": "format/*", "fixable": true },
    { "rule": "*-indent", "fixable": true },
    { "rule": "*-spacing", "fixable": true },
    { "rule": "*-spaces", "fixable": true },
    { "rule": "*-order", "fixable": true },
    { "rule": "*-dangle", "fixable": true },
    { "rule": "*-newline", "fixable": true },
    { "rule": "*quotes", "fixable": true },
    { "rule": "*semi", "fixable": true }
  ],

  // Enable eslint for all supported languages
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "yaml",
    "toml",
    "xml",
    "gql",
    "graphql",
    "astro",
    "svelte",
    "css",
    "less",
    "scss",
    "pcss",
    "postcss"
  ],
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "files.autoSave": "onFocusChange", // optional but recommended,
  "github.copilot.chat.codeGeneration.instructions": [
    {
      "file": "./.vscode/daisyui.md"
    },
    {
      "file": "./.vscode/shadcn-vue.md"
    },
    {
      "file": "./.vscode/nuxt.md"
    }
  ],
  "tailwindCSS.experimental.classRegex": [["tw`(.*?)`", "tw\\('(.*?)'\\)", "tw\\(\\s*('(.*?)'|\"(.*?)\")\\s*\\)"]],
  "terminal.integrated.accessibleViewFocusOnCommandExecution": true,
  "typescript.tsdk": "node_modules\\typescript\\lib",
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#3333ff",
    "activityBar.background": "#3333ff",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#600000",
    "activityBarBadge.foreground": "#e7e7e7",
    "commandCenter.border": "#e7e7e799",
    "editorGroup.border": "#3333ff",
    "panel.border": "#3333ff",
    "sash.hoverBorder": "#3333ff",
    "sideBar.border": "#3333ff",
    "statusBar.background": "#0000ff",
    "statusBar.border": "#0000ff",
    "statusBar.debuggingBackground": "#ffff00",
    "statusBar.debuggingBorder": "#ffff00",
    "statusBar.debuggingForeground": "#15202b",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#3333ff",
    "statusBarItem.remoteBackground": "#0000ff",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "tab.activeBorder": "#3333ff",
    "titleBar.activeBackground": "#0000ff",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.border": "#0000ff",
    "titleBar.inactiveBackground": "#0000ff99",
    "titleBar.inactiveForeground": "#e7e7e799"
  }
}
