{
	"files.associations": {
		"*.css": "tailwindcss"
	},
	"css.lint.unknownAtRules": "ignore",
	"editor.quickSuggestions": {
		"strings": true
	},
	"tailwindCSS.experimental.classRegex": [
		"tw`(.*?)`",
		"tw\\('(.*?)'\\)",
		"tw\\(\\s*('(.*?)'|\"(.*?)\")\\s*\\)"
	],
	"tailwindCSS.experimental.configFile": "app/assets/css/main.css",
	"eslint.useFlatConfig": true,
	// Disable the default formatter, use eslint instead
	// Auto fix
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit",
		"source.organizeImports": "never"
	},
	"terminal.explorerKind": "external",
	"terminal.integrated.accessibleViewFocusOnCommandExecution": true,
	"editor.defaultFormatter": "exceptionptr.vscode-prettier-eslint",
	"editor.formatOnType": true, // required
	"editor.formatOnPaste": true, // optional
	"editor.formatOnSave": true, // optional
	"editor.formatOnSaveMode": "file", // required to format on save
	"files.autoSave": "onFocusChange", // optional but recommended
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	} // set as "true" to run 'prettier' last not first
}